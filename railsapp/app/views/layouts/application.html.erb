<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <title>Railsapp</title>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if current_user %>                                        
        <% if policy(@cita_list = Appointment.all).index? %>            
            <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">   
              <div class="container">
                <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                  <ul class="nav navbar-nav mr-auto">                
                    <li><%= link_to  "Appointments", home_path %></li>                  
                  </ul>                
                  <ul class="nav navbar-nav mr-auto">
                    <li><%= link_to  "New appointment", new_appointment_path %></li>        
                              
                  </ul>
                  <ul class="nav navbar-nav mr-auto">
                    <li><%= link_to  "Employees", employees_path %></li>              
                  </ul>
                  <ul class="nav navbar-nav mr-auto">
                    <li><%= link_to  "New Employees", new_employee_path %></li>
                  </ul>
                  <ul class="nav navbar-nav mr-auto">
                    <li>
                        <form class="form-inline my-2 my-lg-0">        
                          <li><%= link_to "Sign out", destroy_user_session_path,
                                                      method: :delete %></li>
                        </form>
                      </li>
                  </ul>
                </div>
              </div>                       
            </nav>
          <% else %>
             <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">            
              <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">                                    
                  <li>
                    <form class="form-inline my-2 my-lg-0">        
                      <li><%= link_to "Sign out", destroy_user_session_path,
                                                  method: :delete %></li>
                    </form>
                  </li>              
                </ul>                
              </div>
            </nav>
          <% end %>
                                                   
    <% else %>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">   
          <div class="container">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">                
              <li class="nav-item"><%= link_to  "Sign up", new_user_registration_path %></li>                  
            </ul>                
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">                
              <li class="nav-item"><%= link_to "Sign in", new_user_session_path %></li>                  
            </ul>                
          </div>
        </nav>              
    <% end %>
    
    <br>
    <br>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>    

    <div class="container">
      <%= yield %>
    </div>
    
  </body>
</html>



